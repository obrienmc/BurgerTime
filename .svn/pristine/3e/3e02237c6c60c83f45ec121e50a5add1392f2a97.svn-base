package burgertime;

import java.awt.Color;
import java.awt.Shape;
import java.awt.image.BufferedImage;

/**
 * Handles the drawing of all objects including hero, guards, burgers, and the
 * pathways.
 *
 * @author obrienm.
 *         Created Feb 3, 2014.
 */
public interface Drawable {
	
	/**
	 * Returns the fill color that should be drawn to represent this object.
	 * 
	 * @return the fill color
	 */
	Color getColor();

	/**
	 * Returns the shape the should be drawn to represent this object.
	 * 
	 * @return the shape to draw
	 */
	Shape getShape();
	
	BufferedImage getImage();

}
